ncompleteDisplay._visible = true;		} else {			if (question && question.isSurvey) {				// For surveys, we only display textual review feedback				// for incomplete answers, since there is no correct or				// incorrect				//_correctDisplay._visible = false;				//_incorrectDisplay._visible = false;				//_incompleteDisplay._visible = false;			} else {				if (answeredCorrectly) {					_compMC.showCorrectMsg();					//_correctDisplay._visible = true;					//_incorrectDisplay._visible = false;					//_incompleteDisplay._visible = false;				} else {					_compMC.showIncorrectMsg(chosenAnswersAsString, correctAnswersAsString);					//_correctDisplay._visible = false;					//_incorrectDisplay._visible = true;					//_incompleteDisplay._visible = false;				}			}		}		question.quizComp.showChild(_compMC, true);	}	public function showFeedbackAndDoAction():Void 	{		//trace("RA:: showFeedbackAndDoAction = " + _compMC);		_compMC.dispatchEvent({type:"feedbackStarted", target:this});		//visible = true;		_compMC.doLater(this, "setCorrectDisplay");	}	function ReviewFeedback()	{	}		function init()	{		super.init();		//isModal = false;		//_correctDisplay._visible = false;		//_incorrectDisplay._visible = false;		//_incompleteDisplay._visible = false;	}}